
PKG_CPPFLAGS = -I./
PKG_LIBS = -lhts -lz -lm -lbz2 -llzma

CC=$(shell "R CMD config CC")
CXX=$(shell "R CMD config CXX")
CPPFLAGS=$(shell "R CMD config CPPFLAGS")
LDFLAGS=$(shell "R CMD config LDFLAGS")

PKG_CXXFLAGS = -g -O3

.PHONY: all clean

all: $(SHLIB)

clean:
	$(RM) *.o
	$(RM) *.dll
	$(RM) *.so
	$(RM) *.dylib

